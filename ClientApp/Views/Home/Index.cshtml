@{
    ViewData["Title"] = "Ana Sayfa";
}

<h2 class="mb-4 text-center">Avukat Portalı</h2>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="row g-4">
        <!-- Admin kullanıcı tüm kartları görür -->

        <!-- Müvekkil CRUD -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Müvekkil Yönetimi</h5>
                    <p class="card-text">Avukatlar için müvekkil ekleme, düzenleme ve silme işlemleri.</p>
                    <a class="btn btn-primary" asp-controller="Clients" asp-action="Index">Git</a>
                </div>
            </div>
        </div>

        <!-- Dava CRUD -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Dava Yönetimi</h5>
                    <p class="card-text">Davaları ekleme, düzenleme ve silme işlemleri.</p>
                    <a class="btn btn-primary" asp-controller="Cases" asp-action="Index">Git</a>
                </div>
            </div>
        </div>

        <!-- Müvekkil Portalı -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Müvekkil Portalı</h5>
                    <p class="card-text">Müvekkiller kendi davalarını sorgulayabilir.</p>
                    <a class="btn btn-primary" asp-controller="ClientPortal" asp-action="Index">Git</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Sadece Müvekkil Portalı görünsün ama ortalansın -->
    <div class="d-flex justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Müvekkil Portalı</h5>
                    <p class="card-text">Müvekkiller kendi davalarını sorgulayabilir.</p>
                    <a class="btn btn-primary" asp-controller="ClientPortal" asp-action="Index">Git</a>
                </div>
            </div>
        </div>
    </div>
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="mt-5 text-center">
        <h5>Hoş geldin, @User.Identity.Name!</h5>
        <p>Admin olarak tüm modüllere erişimin var.</p>
    </div>
}