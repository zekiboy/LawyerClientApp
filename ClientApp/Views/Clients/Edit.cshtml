@model ClientApp.Models.Client

@{
    ViewData["Title"] = "Müvekkil Düzenle";
}

<h2>Müvekkil Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="FullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Kullanıcı No</label>
        <input asp-for="ClientCode" class="form-control" required />
    </div>
    <div class="form-group">
        <label>İletişim</label>
        <input asp-for="ContactInfo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">İptal</a>
</form>