@model ClientApp.Models.Client

@{
    ViewData["Title"] = "Müvekkil Detay";
}

<h2>Müvekkil Detay</h2>

<div class="card p-3">
    <p><strong>Ad Soyad:</strong> @Model.FullName</p>
    <p><strong>Kullanıcı No:</strong> @Model.ClientCode</p>
    <p><strong>İletişim:</strong> @Model.ContactInfo</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</p>