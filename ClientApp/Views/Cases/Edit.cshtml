@model ClientApp.Models.Case

<h2>Dava Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ClientId" />
    <div class="form-group">
        <label>Dava No</label>
        <input asp-for="CaseNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mahkeme</label>
        <input asp-for="Court" class="form-control" />
    </div>

    <div class="form-group">
        <label>Konu</label>
        <input asp-for="CaseSubject" class="form-control" />
    </div>

    <div class="form-group">
        <label>Durum</label>
        <input asp-for="CaseStatus" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">İptal</a>
</form>