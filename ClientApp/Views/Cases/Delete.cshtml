@model ClientApp.Models.Case

@{
    ViewData["Title"] = "Dosya Sil";
}

<h2>Dosya Sil</h2>

<div class="alert alert-danger">
    <p>Bu hasar / tahkim dosyasını silmek istediğinize emin misiniz?</p>
    <p><strong>@Model.HasarDosyaNo</strong> - @Model.Muvekkil</p>
    <p><strong>Müvekkil:</strong> @Model.Muvekkil</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>